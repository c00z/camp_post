.campsiteindex-img {
  background-image: url(<%= asset_path "forest.png" %>);
  width: 100%;
  height: 800px;
  background-attachment: fixed;
  background-position: center;
  background-size: cover;
  margin-top: -15px;
  font-family: 'Bree Serif', serif;
  text-decoration: none!important;
}

.campindexcontainer {
  padding-top: 70px;
}


.pagination {
  font-size: 35px;
  text-align: center;
  text-decoration: none!important;
  color: white;
  font-family: 'Bree Serif', serif;
  text-shadow: 2px 2px 4px #000000;
}

#limheight {
  margin-top: 40px;
  height: 400px;
  -webkit-column-count: 5;
  -moz-column-count: 3;
  column-count: 3; /*3 is just placeholder -- can be anything*/
  box-sizing: border-box;
  display: block;
  position: relative;
  margin: 0 auto;
  background-color: white;
  text-align: center;
  background-color: #424242;
}

h5 a {
  color: white;
  text-decoration: none;
  font-size: 28px;
}

#limheight h5 {
  text-decoration: none!important;
  display: inline-block;
  padding: 20px;
}


#limheight h5:hover {
  background-color: grey;
  opacity: .5;
}

#searchbar {
  background-color: #424242;
  margin: auto;
  width: 100%;
  padding: 10px;
}

#campsitepage {
  background-image: url(<%= asset_path "fingermap.jpg" %>);
  width: 100%;
  min-height: 800px;
  height: 100%;
  background-attachment: fixed;
  background-position: center;
  background-size: cover;
  margin-top: -30px;
}

#newreviewform {
  background-color: #424242;
  border: 2px solid black;
  border-radius: 10px;
  width: 500px;
  height: 400px;
  padding: 10px;
  text-align: center;
  margin: 0 auto;
}

#reviewheader {
  color: white;
  font-family: 'Bree Serif', serif;
  text-shadow: 4px 4px 6px #000000;
}

#review-title a {
  text-decoration: none!important;
}
