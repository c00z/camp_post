.profile-gif {
  // position: relative;
  background-image: url(<%= asset_path "forest2.gif" %>);
  max-width: 100%;
  height: 300px;
  background-repeat: no-repeat;
  background-position: center;
  // background-color: black;
}

#editprofilepage {
  background-image: url("<%= asset_path "map.jpg" %>");
  background-attachment: fixed;
  background-position: center;
  background-size: cover;
  height: 750px;
  margin-top: -25px;
  align-content: center;
}

#editprofileform {
  background-color: #424242;
  border: 2px solid black;
  border-radius: 10px;
  width: 500px;
  height: 300px;
  padding: 10px;
  text-align: center;
  margin-top: 100px;
}

#profilepage {
  background-image: url("<%= asset_path "yosemite.png" %>");
  background-attachment: fixed;
  background-position: center;
  background-size: cover;
  min-height: 900px;
  height: 100%;
  margin-top: -25px;
  align-content: center;
}

#userinfo {
  background-color: #424242;
  color: white;
  border: 2px solid black;
  margin-top: 50px;
  padding: 20px;
}

#usercard {
  background-color: #424242;
}

#usercard a {
  color: white;
}
