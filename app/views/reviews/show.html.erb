<!-- Show One Review -->
<div id="listpage">
  <div class="container">
    <div class="row">
      <br>
      <div class="col s8" id="newreviewform">
        <h2 id="formhead"><%= @review.title %></h2>
        <h4>By <%= link_to "#{@review.user.username}", user_path(@review.user) %></h4>
        <h5><%= @review.description %></h5>

        <% if current_user == @review.user %>
        <p><%= link_to "edit ", edit_review_path(@review),  :class => 'waves-effect waves-light btn' %>
        <%= link_to "delete", review_path(@review), method: :delete, data: { confirm: "Are you sure?" }, :class => 'waves-effect waves-light btn red delete' %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
